
<h1 align="center">Listing Room</h1>

<div id="form">
  <div align="right">
    <% if can? :create, @room_statuses %>
    <%= button_to 'Create New Room', new_room_status_path %>
    <% end %>

  </div>
  <table>
  <tr align="center" style="color:#f4a460;">
    <th>Room Number</th>
    <th><dd>Room Name</dd></th>
    <th><dd>Room Status</dd></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @room_statuses.each do |room_status| %>
  <tr align="center">
    <td style="color:#ffdead;"><%= room_status.roomnum %></td>
    <td style="color:#ffdead;"><dd><%= room_status.roomname %></dd></td>
    <td style="color:#ffdead;"><dd><%= room_status.roomstatus %></dd></td>
    <td><dd><%= link_to 'View', room_status %></dd></td>
    <td><%= link_to 'Edit', edit_room_status_path(room_status) %></td>

    <% if can? :Destroy, @room_statuses %>
    <td><%= link_to 'Delete', room_status, :confirm => 'Are you sure?', :method => :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>
</div>

